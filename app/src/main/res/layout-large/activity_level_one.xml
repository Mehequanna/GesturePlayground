<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mehequanna.gestureplayground.ui.LevelOneActivity">

    <ImageView
        android:src="@drawable/farmbackground"
        android:id="@+id/backgroundImageView"
        android:contentDescription="@string/farm_background"
        style="@style/farm_background" />

    <TextView
        android:id="@+id/winTextView"
        style="@style/win_text" />

    <ImageView
        android:contentDescription="@string/cow_ten"
        android:src="@drawable/cowten"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowTen"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="31dp" />

    <ImageView
        android:contentDescription="@string/cow_five"
        android:src="@drawable/cowfive"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowFive"
        android:visibility="invisible"
        android:layout_alignTop="@+id/cowTen"
        android:layout_alignStart="@+id/cowTen" />

    <ImageView
        android:contentDescription="@string/cow_four"
        android:src="@drawable/cowfour"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowFour"
        android:visibility="invisible"
        android:layout_alignTop="@+id/cowNine"
        android:layout_alignStart="@+id/cowNine" />

    <ImageView
        android:contentDescription="@string/cow_eight"
        android:src="@drawable/coweight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowEight"
        android:visibility="invisible"
        android:layout_below="@+id/cowNine"
        android:layout_toStartOf="@+id/cowNine"
        android:layout_marginEnd="46dp" />

    <ImageView
        android:contentDescription="@string/cow_three"
        android:src="@drawable/cowthree"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowThree"
        android:visibility="invisible"
        android:layout_alignTop="@+id/cowEight"
        android:layout_alignStart="@+id/cowEight" />

    <ImageView
        android:contentDescription="@string/cow_two"
        android:src="@drawable/cowtwo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowTwo"
        android:visibility="invisible"
        android:layout_alignTop="@+id/cowSeven"
        android:layout_alignStart="@+id/cowSeven" />

    <ImageView
        android:contentDescription="@string/cow_one"
        android:src="@drawable/cowone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowOne"
        android:layout_alignTop="@+id/cowSix"
        android:layout_alignStart="@+id/cowSix" />

    <ImageView
        android:contentDescription="@string/cow_six"
        android:src="@drawable/cowsix"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowSix"
        android:visibility="invisible"
        android:layout_marginEnd="54dp"
        android:layout_alignTop="@+id/cowEight"
        android:layout_toStartOf="@+id/cowTwo" />

    <ImageView
        android:contentDescription="@string/cow_seven"
        android:src="@drawable/cowseven"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowSeven"
        android:visibility="invisible"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/cowNine"
        android:layout_toStartOf="@+id/homeButtonImageView" />

    <ImageView
        android:contentDescription="@string/cow_nine"
        android:src="@drawable/cownine"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowNine"
        android:visibility="invisible"
        android:layout_marginEnd="97dp"
        android:layout_above="@+id/cowTen"
        android:layout_toStartOf="@+id/cowTen"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:src="@drawable/playagainbutton"
        android:id="@+id/playAgainButtonImageView"
        android:visibility="invisible"
        android:contentDescription="@string/play_again"
        style="@style/menu_buttons_lg"
        android:layout_above="@+id/cowFour"
        android:layout_toStartOf="@+id/cowFour"
        android:layout_marginEnd="23dp" />

    <ImageView
        android:src="@drawable/homebutton"
        android:id="@+id/homeButtonImageView"
        android:visibility="invisible"
        android:contentDescription="@string/home_button"
        style="@style/menu_buttons_lg"
        android:layout_alignBottom="@+id/cowFour"
        android:layout_alignStart="@+id/playAgainButtonImageView" />

</RelativeLayout>

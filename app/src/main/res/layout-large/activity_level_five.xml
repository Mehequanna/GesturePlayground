<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_five"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mehequanna.gestureplayground.ui.LevelFiveActivity">

    <ImageView
        android:src="@drawable/farmbackground"
        android:id="@+id/backgroundImageView"
        android:contentDescription="@string/farm_background"
        style="@style/farm_background" />

    <TextView
        android:id="@+id/winTextView"
        style="@style/win_text_lg" />

    <VideoView
        android:id="@+id/level5VideoView"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:contentDescription="@string/pig_up"
        android:src="@drawable/pigup"
        android:id="@+id/pigUp"
        android:visibility="invisible"
        style="@style/pig_imageviews_lg" />

    <ImageView
        android:contentDescription="@string/pig_down"
        android:src="@drawable/pigdown"
        android:id="@+id/pigDown"
        android:visibility="invisible"
        style="@style/pig_imageviews_lg" />

    <ImageView
        android:contentDescription="@string/red_airplane"
        android:src="@drawable/airplanered"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/airplaneRed"
        android:visibility="invisible"
        android:layout_alignTop="@+id/airplaneBlue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:contentDescription="@string/tractor_trailer"
        android:src="@drawable/tractortrailer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/tractorTralier"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/tractorRed"
        android:layout_alignEnd="@+id/airplaneRed"
        android:scaleX="-1" />

    <ImageView
        android:contentDescription="@string/red_tractor"
        android:src="@drawable/tractorred"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/tractorRed"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/airplaneBlue" />

    <ImageView
        android:contentDescription="@string/cow_five"
        android:src="@drawable/cowfive"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowFive"
        android:visibility="invisible"
        android:layout_above="@+id/tractorRed"
        android:layout_alignStart="@+id/tractorTralier"
        android:layout_marginStart="37dp" />

    <ImageView
        android:contentDescription="@string/pink_chicken"
        android:src="@drawable/chickenpink"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/chickenPink"
        android:visibility="invisible"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/pigUp"
        android:layout_alignEnd="@+id/airplaneBlue" />

    <ImageView
        android:contentDescription="@string/blue_airplane"
        android:src="@drawable/airplaneblue"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:scaleX="-1"
        android:id="@+id/airplaneBlue"
        android:visibility="invisible"
        android:layout_marginStart="23dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:contentDescription="@string/cow_ten"
        android:src="@drawable/cowten"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/cowTen"
        android:visibility="invisible"
        android:layout_marginEnd="7dp"
        android:layout_alignTop="@+id/cowFive"
        android:layout_toStartOf="@+id/pigUp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/homeButtonImageView"
        android:visibility="invisible"
        android:src="@drawable/homebutton"
        android:contentDescription="@string/home_button"
        style="@style/menu_buttons_lg"
        android:layout_below="@+id/playAgainButtonImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <ImageView
        android:contentDescription="@string/blue_chicken"
        android:src="@drawable/chickenblue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/chickenBlue"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pigUp"
        android:layout_marginStart="26dp" />

    <ImageView
        android:id="@+id/playAgainButtonImageView"
        android:src="@drawable/playagainbutton"
        android:visibility="invisible"
        android:contentDescription="@string/play_again"
        style="@style/menu_buttons_lg"
        android:layout_alignTop="@+id/chickenPink"
        android:layout_alignStart="@+id/pigUp" />
</RelativeLayout>

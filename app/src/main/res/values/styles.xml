<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="win_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">42sp</item>
    </style>

    <style name="level_buttons">
        <item name="android:background">#33000000</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="level_buttons_xl">
        <item name="android:background">#33000000</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="pig_imageviews">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="farm_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:contentDescription">@string/farm_background</item>
    </style>
</resources>

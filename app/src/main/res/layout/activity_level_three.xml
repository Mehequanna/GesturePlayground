<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mehequanna.gestureplayground.ui.LevelThreeActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/farmbackground"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/farm_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:id="@+id/winTextView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <ImageView
        android:contentDescription="@string/blue_airplane"
        android:src="@drawable/farmairplaneblue"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:scaleX="-1"
        android:id="@+id/airplaneBlue"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:contentDescription="@string/red_airplane"
        android:src="@drawable/farmairplanered"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/airplaneRed"
        android:layout_alignTop="@+id/airplaneBlue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:contentDescription="@string/green_airplane"
        android:src="@drawable/farmairplanegreen"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:scaleX="-1"
        android:id="@+id/airplaneGreen"
        android:layout_below="@+id/airplaneRed"
        android:layout_alignStart="@+id/airplaneBlue" />

    <ImageView
        android:contentDescription="@string/pink_tractor"
        android:src="@drawable/farmtractorpink"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/tractorPink"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <ImageView
        android:contentDescription="@string/green_tractor"
        android:src="@drawable/farmtractorgreen"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/tractorGreen"
        android:layout_alignTop="@+id/tractorPink"
        android:layout_alignEnd="@+id/airplaneRed"
        android:layout_marginTop="14dp"
        android:scaleX="-1"/>

    <ImageView
        android:contentDescription="@string/black_tractor"
        android:src="@drawable/farmtractorblack"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/tractorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tractorPink"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:contentDescription="@string/red_tractor"
        android:src="@drawable/farmtractorred"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/tractorRed"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/tractorPink"
        android:layout_toStartOf="@+id/winTextView" />
</RelativeLayout>
